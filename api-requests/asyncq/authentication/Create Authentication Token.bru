meta {
  name: Create Authentication Token
  type: http
  seq: 2
}

post {
  url: {{host}}/v1/tokens/authentication
  body: json
  auth: inherit
}

body:json {
  {
    "email": "test@example.com",
    "password": "changeme"
  }
}

script:post-response {
  if (res.status == 201) {
    bru.setEnvVar("token",res.body.token.token) 
  }
}
